@model BumbleBee.Models.FundingRequestViewModel

@{
    ViewData["Title"] = "Funding Request";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Funding Request</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label asp-for="CompanyName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CompanyBackground" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="CompanyBackground" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="CompanyBackground" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ProjectDetails" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="ProjectDetails" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="ProjectDetails" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="FundingAmount" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="FundingAmount" class="form-control" />
                                <span asp-validation-for="FundingAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IntendedImpact" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="IntendedImpact" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="IntendedImpact" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Supporting Document</label>
                            <div class="col-sm-9">
                                <input type="file" name="SupportingDocument" class="form-control-file" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary mt-3">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
